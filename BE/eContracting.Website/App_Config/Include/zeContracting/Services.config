<?xml version="1.0" encoding="utf-8"?>
<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/">
    <sitecore>
        <services>
            <register serviceType="eContracting.ILogger, eContracting.Core" implementationType="eContracting.SitecoreLogger, eContracting.Core" lifetime="Singleton" />
            <register serviceType="eContracting.IContextWrapper, eContracting.Core" implementationType="eContracting.SitecoreContextWrapper, eContracting.Core" lifetime="Singleton" />
            <register serviceType="eContracting.ICache, eContracting.Core" implementationType="eContracting.Services.CacheService, eContracting.Services" lifetime="Singleton" />
            <register serviceType="eContracting.IApiService, eContracting.Core" implementationType="eContracting.Services.SapApiService, eContracting.Services" lifetime="Scoped" />
            <register serviceType="eContracting.IOfferParserService, eContracting.Core" implementationType="eContracting.Services.OfferParserService, eContracting.Services" lifetime="Singleton" />
            <register serviceType="eContracting.IOfferAttachmentParserService, eContracting.Core" implementationType="eContracting.Services.OfferAttachmentParserService, eContracting.Services" lifetime="Singleton" />
            <register serviceType="eContracting.IAuthenticationService, eContracting.Core" implementationType="eContracting.Services.AuthenticationService, eContracting.Services" lifetime="Scoped" />
            <register serviceType="eContracting.ISettingsReaderService, eContracting.Core" implementationType="eContracting.Services.SitecoreSettingsReaderService, eContracting.Services" lifetime="Scoped" />
            <register serviceType="eContracting.ILoginReportStore, eContracting.Core" implementationType="eContracting.Services.MongoLoginReportStore, eContracting.Services" lifetime="Singleton" />
            <register serviceType="Glass.Mapper.Sc.ISitecoreContext, Glass.Mapper.Sc" implementationType="Glass.Mapper.Sc.SitecoreContext, Glass.Mapper.Sc" lifetime="Scoped" />
        </services>
    </sitecore>
</configuration>