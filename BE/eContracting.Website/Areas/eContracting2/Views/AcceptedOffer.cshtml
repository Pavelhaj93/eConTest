@using Glass.Mapper.Sc.Web.Mvc
@using eContracting.Website.Areas.eContracting2.Models
@model AcceptedOfferViewModel

<div class="row">
    <div class="col-12">
        <div class="text-center">
            <h1>@Html.Glass().Editable(Model, x => x.Datasource.PageTitle)</h1>
            @Html.Raw(Model.MainText)
        </div>
        <div id="app"></div>
    </div>
</div>

@if (Model.ShowDashboardButton)
{
    <div class="row justify-content-center">
        <div class="col-12 col-sm-8 col-lg-7 col-xl-6">
            <div class="text-center mb-4">
                <a href="@Model.ButtonDashboardUrl" class="btn btn-primary btn-block">@Model.Datasource.ButtonDashboardLabel</a>
            </div>
        </div>
    </div>
}

<script>
    var appConfig = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model, Newtonsoft.Json.Formatting.Indented));
</script>
@if (!string.IsNullOrEmpty(Model.AbMatrixCombinationPixelUrl))
{
    <img src="@Model.AbMatrixCombinationPixelUrl" alt="pixel" hidden aria-hidden="true" />
}
