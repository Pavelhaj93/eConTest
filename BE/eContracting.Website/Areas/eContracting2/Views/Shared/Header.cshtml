@using eContracting
@using eContracting.Models
@model HeaderViewModel

<header class="header">
    <div class="container">
        <div class="row justify-content-center">
            @if (!string.IsNullOrEmpty(Model.Datasource.PhoneNumberLink))
            {
                <a class="phone v-center v-center--large" href="tel:@Model.Datasource.PhoneNumberLink" id="phoneLink">
                    <svg class="icon" preserveAspectRatio="none" width="32" height="32" focusable="false" aria-hidden="true">
                        <use class="d-none d-sm-block" xlink:href="#phone"></use>
                    </svg>
                    <span>@Model.Datasource.PhoneNumber</span>
                </a>
            }
            <a class="logo" href="@Model.LogoUrl" id="imageLink" target="_blank">
                <svg class="icon" preserveAspectRatio="none">
                    <use xlink:href="#logo"></use>
                </svg>
            </a>
            @if (Model.LogoutUrl != null && Model.ShowLogoutButton)
            {
                <a class="logout v-center v-center--large" href="@Model.LogoutUrl" id="logoutLink">
                    <svg class="icon" preserveAspectRatio="none" width="32" height="32" focusable="false" aria-hidden="true">
                        <use class="d-none d-sm-block" xlink:href="#power-on-off"></use>
                    </svg>
                    <span>@Model.LogoutUrlLabel</span>
                </a>
            }
        </div>
    </div>
</header>
