@using System.Linq 
@using Glass.Mapper.Sc.Web.Mvc
@using eContracting.Kernel.GlassItems.Pages
@using eContracting.Website.Areas.eContracting2.Models
@model LoginViewModel
<div class="row">
    <div id="token">@Html.AntiForgeryToken()</div>
    <div class="col-md-8 col-md-offset-2">
        <div class="info">
            @Html.Raw(ViewData["MainText"])
        </div>
        <div id="app"></div>
    </div>
    <form action="@Request.RawUrl" method="post">
        <table>
            <tbody>
                <tr>
                    <th>Datum narození:</th>
                    <td>@Html.TextBox("birthdate")</td>
                </tr>
                @foreach (var choice in Model.Choices)
                {
                    <tr>
                        <th>@choice.Label:</th>
                        <td>@Html.RadioButton("value", choice.Key)</td>
                    </tr>
                }
            </tbody>
        </table>
    </form>
</div>

<script>
    var appConfig = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model, Newtonsoft.Json.Formatting.Indented));
</script>