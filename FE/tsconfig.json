{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es5", "esnext", "dom", "dom.iterable"],
    "removeComments": true,
    "rootDir": "src",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true,
    "jsx": "react",
    "experimentalDecorators": true,
    "baseUrl": "./",
    "paths": {
      "@icons": ["src/icons/svg"],
      "@components": ["src/app/components"],
      "@hooks": ["src/app/hooks"],
      "@types": ["src/app/types"],
      "@utils": ["src/app/utils"],
      "@views": ["src/app/views"],
      "@theme": ["src/app/theme"],
      "@stores": ["src/app/stores"],
      "@context": ["src/app/context"],
      "@ui": ["src/ui"]
    }
  },
  "include": ["./src/app", "custom.d.ts"],
  "exclude": ["build", "node_modules", "webpack"]
}
