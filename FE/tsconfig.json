{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es5", "esnext", "dom"],
    "removeComments": true,
    "rootDir": "src",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true,
    "jsx": "react"
  },
  "include": ["./src/app", "custom.d.ts"],
  "exclude": ["build", "node_modules", "webpack"]
}
