@model LayoutModel
<!DOCTYPE html>

<html lang="cs">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="initial-scale=1, user-scalable=no">
	<meta http-equiv="X-UA-Compatible" content="IE=edge;" />
